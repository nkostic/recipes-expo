# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package.json
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[*.{config.js,config.ts}]
indent_style = space
indent_size = 2

# Expo and React Native specific
[{expo.json,app.json,eas.json}]
indent_style = space
indent_size = 2

# Metro config
[metro.config.js]
indent_style = space
indent_size = 2

# Babel config
[{.babelrc,.babelrc.js,babel.config.js}]
indent_style = space
indent_size = 2

# ESLint/Biome config (if present)
[{.eslintrc,.eslintrc.js,.eslintrc.json,biome.json}]
indent_style = space
indent_size = 2
